<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <button type="button" class="btn btn-navbar" data-toggle="collapse"
                data-target=".nav-collapse">
                <span class="icon-bar"></span><span class="icon-bar"></span><span
                    class="icon-bar"></span>
            </button>
            @Html.ActionLink("PhotoShr", "Index", "Home", null, new { @class = "brand" })
            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li><a href="@Url.Content("/Photo")">Photos</a></li>
                    <li><a href="@Url.Content("/Group")">Groups</a></li>
                    <li><a href="@Url.Content("/Story")">Stories</a></li>
                </ul>
                @if (Session["LoggedInUser"] != null)
                {
                    <div class="btn-group pull-right">
                        <button class="btn btn-inverse"><i class="icon-user icon-white"></i>@Session["LoggedInUser"]</button>
                        <button class="btn btn-inverse dropdown-toggle"
                            data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Content(string.Format("/User/{0}/Index/", Session["LoggedInUser"]))">Photos</a></li>
                            <li><a href="@Url.Content(string.Format("/User/{0}/Stories/", Session["LoggedInUser"]))">Stories</a></li>
                            <li><a href="@Url.Content(string.Format("/User/{0}/Sets/", Session["LoggedInUser"]))">Sets</a></li>
                            <li><a href="@Url.Content(string.Format("/User/{0}/Groups/", Session["LoggedInUser"]))">Groups</a></li>
                            <li><a href="@Url.Content(string.Format("/User/{0}/Favorites/", Session["LoggedInUser"]))">Favorites</a></li>
                            <li><a href="@Url.Content(string.Format("/User/{0}/RecentActivity/", Session["LoggedInUser"]))">Recent Activity</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Content(string.Format("/User/{0}/Profile/",Session["LoggedInUser"]))">Profile</a></li>
                            <li><a href="@Url.Content(string.Format("/User/{0}/ChangePassword/",Session["LoggedInUser"]))">Change Password</a></li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Logout", "LogOff", "Account")</li>
                        </ul>
                    </div>
                    <div class="btn-group pull-right">
                        <button class="btn btn-primary">Upload</button>
                        <button class="btn btn-primary dropdown-toggle"
                            data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Content("/Photo/Upload/")">Photos</a></li>
                            <li>@Html.ActionLink("Story", "Create", "Story")</li>
                            <li>@Html.ActionLink("Group", "Create", "Group")</li>
                            <li>@Html.ActionLink("Set", "Create", "Set")</li>
                        </ul>
                    </div>
                }
                else
                {
                    <ul class="nav nav-pills pull-right">
                        <li>@Html.ActionLink("Sign in", "LogOn", "Account")</li>
                        <li>@Html.ActionLink("Sign up", "Register", "Account")</li>
                    </ul>
                }
                <form class="navbar-search pull-right" action="@Url.Content("/Search/Index/")">
                    <input class="search-query span2" name="q" id="q" type="text" placeholder="Search">
                </form>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>
