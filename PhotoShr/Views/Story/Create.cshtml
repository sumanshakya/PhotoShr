@model PhotoShr.Models.StoryVM

@using PhotoShr.Models



@{
    ViewBag.Title = "Create Story";
}
@section ExtraStyles {
    <link href="@Url.Content("~/Styles/image-picker.css")" rel="stylesheet" />
}

@section ExtraScripts {
    <script src="@Url.Content("~/Scripts/image-picker.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    
    <script>
        $(function () {
            $("select.image-picker").imagepicker()
        });
    

    </script>

}

<h1>New Story</h1>
<hr />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

        <div class="editor-label">
            <label for="title">Title</label>
        </div>
        <div class="editor-field">
            <input type="text" name="title" id="title" class="span6" />
        </div>

        <div class="editor-label"><label for="description">Description</label>
        </div>
        <div class="editor-field">
            <textarea name="description" rows="10" class="span8"></textarea> 
        </div>

        <div class="editor-label">
            <label for="tags">Tags</label>
        </div>
        <div class="editor-field">
            <input type="text" name="tags" class="span8" />
        </div>
        <div class="editor-label">
            <label for="collection-photos">Select pictures for your story</label>
        </div>
        <div class="editor-field">
            <select multiple="multiple" class="image-picker show-html" name="photos" id="photos">
                @foreach (var item in (List<photo>)ViewBag.UserPhotos)
                { 
                    <option data-img-src="@Url.Content(item.photo_url_s)" value="@item.id">@item.name</option>
                }
            </select>
        </div>

        <p>
            <input type="submit" value="Create" class="btn btn-primary" />
        </p>

}

